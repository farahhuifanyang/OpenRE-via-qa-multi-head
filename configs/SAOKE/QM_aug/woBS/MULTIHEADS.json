        "multispan_allow_all_heads_to_answer": true
    },
    "iterator": {
        "type": "basic",
        "batch_size": 12
    },
    "model": {
        "type": "QumaOpenRelExtractor",
        "bert_pretrained_model": "bert-base-chinese",
